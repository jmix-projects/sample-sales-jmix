<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://customerEdit.caption"
        focusComponent="form">
    <data>
        <instance id="customerDc"
                  class="com.company.samplesales.entity.Customer">
            <fetchPlan extends="_local"/>
            <loader/>
        </instance>
        <collection id="ordersDc" class="com.company.samplesales.entity.Order">
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from sales_Order e where e.customer = :customer order by e.date]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="customerDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="emailField" property="email"/>
                <comboBox id="gradeField" property="grade"/>
            </column>
        </form>
        <label value="Orders"/>
        <table id="ordersTable" width="350px" dataContainer="ordersDc">
            <columns>
                <column id="date" align="CENTER"/>
                <column id="amount" align="CENTER"/>
                <column id="orderNumber"/>
            </columns>
        </table>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
